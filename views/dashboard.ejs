<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Document</title>
  </head>
  <body
    style="background-color: rgba(17, 17, 17, 0.918); box-sizing: border-box"
  >
    <h1 style="width: 100%; border-bottom: 2px solid white; color: white">
      Inventory Management
    </h1>
    <form action="/add-books" method="post">
      <div
        style="
          display: flex;
          align-items: center;
          justify-content: flex-start;
          gap: 50px;
          width: 100%;
          height: 80px;
          border-bottom: 2px solid white;
        "
      >
        <div
          style="
            display: flex;
            flex-direction: column !important;
            align-items: flex-start;
            justify-content: flex-start;
            margin-left: 30px;
            gap: 10px;
          "
        >
          <label style="color: white" for="title">Title</label>
          <input
            name="title"
            style="
              height: 30px;
              width: 100px;
              border-radius: 5px;
              border: none;
              background-color: white;
              padding-left: 10px;
            "
            placeholder="Enter Title"
          />
        </div>
        <div
          style="
            display: flex;
            flex-direction: column;
            align-items: flex-start;
            justify-content: flex-start;
            gap: 10px;
          "
        >
          <label style="color: white" for="author">Author</label>
          <input
            name="author"
            style="
              height: 30px;
              width: 100px;
              border-radius: 5px;
              border: none;
              background-color: white;
              padding-left: 10px;
            "
            placeholder="Enter Author"
          />
        </div>
        <div
          style="
            display: flex;
            flex-direction: column;
            align-items: flex-start;
            justify-content: flex-start;
            gap: 10px;
          "
        >
          <label style="color: white" for="price">Price</label>
          <input
            name="price"
            style="
              height: 30px;
              width: 100px;
              border-radius: 5px;
              border: none;
              background-color: white;
              padding-left: 10px;
            "
            placeholder="Enter Price"
          />
        </div>
        <div
          style="
            display: flex;
            flex-direction: column;
            align-items: flex-start;
            justify-content: flex-start;
            gap: 10px;
          "
        >
          <label style="color: white" for="category">Category</label>
          <input
            name="category"
            style="
              height: 30px;
              width: 100px;
              border-radius: 5px;
              border: none;
              background-color: white;
              padding-left: 10px;
            "
            placeholder="Enter Category"
          />
        </div>
        <button
          type="submit"
          id="add_button"
          style="
            height: 30px;
            width: auto;
            background-color: navy;
            color: white;
            border: 1px solid white;
            border-radius: 5px;
            cursor: pointer;
            margin-top: 30px;
          "
        >
          Add Book
        </button>
      </div>
    </form>
    <section>
      <h1 style="width: 100%; color: white">All Books</h1>
      <div
        id="all-books"
        style="
          display: flex;
          align-items: center;
          justify-content: center;
          gap: 20px;
          flex-wrap: wrap;
          width: 80%;
          margin: 0 auto;
        "
      >
    <p></p>
    </div>
    </section>
    <script src="https://unpkg.com/axios@1.1.2/dist/axios.min.js"></script>
    <script src="/dashboardBrowser.js"></script>
  </body>
</html>
